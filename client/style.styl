body
  margin: 0
  padding-top: 40px
  font-family sans-serif
  color: #000

a, a:visited, a:hover
  text-decoration: none
  color: #fff

.header
  background-color: #00aeef
  position: fixed
  top: 0
  width: 100%
  z-index: 500

.navbar
  display: inline-block
  div
    display: inline-block
    a
      display: block
      padding: 10px 15px

.corp-select
  display: inline-block
  margin-left: 40px

.login-info
  display: inline-block
  float: right
  color: #fff
  padding: 8px 12px

.grid
  border-collapse: separate
.grid-head
  display: table-header-group
.grid-body
  display: table-row-group
.grid-row
  display: table-row
.grid-cell
  display: table-cell